            <summary>
            Get all root folders
            </summary>
            <returns>List of root folders</returns>
        </member>
        <member name="M:Dropbox.Controllers.FoldersController.GetFolderTree">
            <summary>
            Get complete folder tree structure
            </summary>
            <returns>Hierarchical folder tree</returns>
        </member>
        <member name="M:Dropbox.Controllers.FoldersController.DeleteFolder(System.Guid)">
            <summary>
            Delete a folder (must be empty)
            </summary>
            <param name="id">Folder ID</param>
            <returns>Success status</returns>
        </member>
